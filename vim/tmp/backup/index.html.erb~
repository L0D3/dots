<h1>Listing tags</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Busstation</th>
    <th>Position</th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.code %></td>
    <td><%= tag..name unless tag.busstation.blank?%></td>
    <td><%= tag.position unless tag.position.blank?%></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

