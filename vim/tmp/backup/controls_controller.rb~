# encoding : utf-8
class ControlsController < BeautifulController

  before_filter :load_control, :only => [:show, :edit, :update, :destroy]

  # Uncomment for check abilities with CanCan
  #authorize_resource

  def index
    session[:fields] ||= {}
    session[:fields][:control] ||= (Control.columns.map(&:name) - ["id"])[0..4]
    do_select_fields(:control)
    do_sort_and_paginate(:control)
    
    @q = Control.search(
      params[:q]
    )

    @control_scope = @q.result(
      :distinct => true
    ).sorting(
      params[:sorting]
    )
    
    @control_scope_for_scope = @control_scope.dup
    
    unless params[:scope].blank?
      @control_scope = @control_scope.send(params[:scope])
    end
    
    @controls = @control_scope.paginate(
      :page => params[:page],
      :per_page => 20
    ).all

    respond_to do |format|
      format.html{
        if request.headers['X-PJAX']
          render :layout => false
        else
          render
        end
      }
      format.json{
        render :json => @control_scope.all 
      }
      format.csv{
        require 'csv'
        csvstr = CSV.generate do |csv|
          csv << Control.attribute_names
          @control_scope.all.each{ |o|
            csv << Control.attribute_names.map{ |a| o[a] }
          }
        end 
        render :text => csvstr
      }
      format.xml{ 
        render :xml => @control_scope.all 
      }             
      format.pdf{
        pdfcontent = PdfReport.new.to_pdf(Control,@control_scope)
        send_data pdfcontent
      }
    end
  end

  def show
    @patent=@control.patent
    respond_to do |format|
      format.html{
        if request.headers['X-PJAX']
          render :layout => false
        else
          render
        end
      }
      format.json { render :json => @control }
    end
  end

  def new
    @control = Control.new

    respond_to do |format|
      format.html{
        if request.headers['X-PJAX']
          render :layout => false
        else
          render
        end
      }
      format.json { render :json => @control }
    end
  end

  def edit
    
  end

  def create
    @control = Control.create(params[:control])

    respond_to do |format|
      if @control.save
        format.html {
          if params[:mass_inserting] then
            redirect_to controls_path(:mass_inserting => true)
          else
            redirect_to control_path(@control), :notice => t(:create_success, :model => "control")
          end
        }
        format.json { render :json => @control, :status => :created, :location => @control }
      else
        format.html {
          if params[:mass_inserting] then
            redirect_to controls_path(:mass_inserting => true), :error => t(:error, "Error")
          else
            render :action => "new"
          end
        }
        format.json { render :json => @control.errors, :status => :unprocessable_entity }
      end
    end
  end

  def update

    respond_to do |format|
      if @control.update_attributes(params[:control])
        format.html { redirect_to control_path(@control), :notice => t(:update_success, :model => "control") }
        format.json { head :ok }
      else
        format.html { render :action => "edit" }
        format.json { render :json => @control.errors, :status => :unprocessable_entity }
      end
    end
  end

  def destroy
    @control.destroy

    respond_to do |format|
      format.html { redirect_to controls_url }
      format.json { head :ok }
    end
  end

  def batch
    attr_or_method, value = params[:actionprocess].split(".")

    @controls = []    
    
    Control.transaction do
      if params[:checkallelt] == "all" then
        # Selected with filter and search
        do_sort_and_paginate(:control)

        @controls = Control.search(
          params[:q]
        ).result(
          :distinct => true
        )
      else
        # Selected elements
        @controls = Control.find(params[:ids].to_a)
      end

      @controls.each{ |control|
        if not Control.columns_hash[attr_or_method].nil? and
               Control.columns_hash[attr_or_method].type == :boolean then
         control.update_attribute(attr_or_method, boolean(value))
         control.save
        else
          case attr_or_method
          # Set here your own batch processing
          # control.save
          when "destroy" then
            control.destroy
          end
        end
      }
    end
    
    redirect_to :back
  end

  def treeview

  end

  def treeview_update
    modelclass = Control
    foreignkey = :control_id

    render :nothing => true, :status => (update_treeview(modelclass, foreignkey) ? 200 : 500)
  end
  
  private 
  
  def load_control
    @control = Control.find(params[:id])
  end
end

