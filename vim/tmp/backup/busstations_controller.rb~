class BusstationsController < ApplicationController
respond_to :json,:html
  def index
    @busstations = Busstation.all
    respond_with(@busstations)
  end

  def show
    @busstation = Busstation.find(params[:id])
  end

  def new
    @busstation = Busstation.new
  end

  def create
    @busstation = Busstation.new(params[:busstation])
    if @busstation.save
      redirect_to @busstation, :notice => "Successfully created busstation."
    else
      render :action => 'new'
    end
  end

  def edit
    @busstation = Busstation.find(params[:id])
  end

  def update
    @busstation = Busstation.find(params[:id])
    params[:busstation][:tags].each do |tag|
        @busstation.tags.create(tag)
    end
  #  if @busstation.update_attributes(params[:busstation])
      redirect_to @busstation, :notice  => "Successfully updated busstation."
   # else
    #  render :action => 'edit'
    #end
  end

  def destroy
    @busstation = Busstation.find(params[:id])
    @busstation.destroy
    redirect_to busstations_url, :notice => "Successfully destroyed busstation."
  end
end
