var positions={};
$(document).delegate("#tag",'pagebeforeshow', function() {
    console.log("gm");
    $.ajax({
        'beforeSend': function(xhr) {
            //May need to use "Authorization" instead
            xhr.setRequestHeader("Authorization",
                "Basic " + btoa("mobias:secret"));
        },
        url: "http://sheltered-everglades-9379.herokuapp.com/api/positions",
        dataType: "json",
        type:"GET"
    })
    .then(function (data) {
        var output = '';
        $.each(data, function(index, value){
            positions[""+value.id+""]=value;
            output += '<option value="'+value.id+'">'+value.name+'</option>';
        });
        $('#position').append(output).selectmenu('refresh',true);
    });
});

