class ReportsController < ApplicationController
  def index
  end
  def show
    @report= Report.find(params[:id])
    @patent=@report.control.patent
    @control=@report.control
   respond_to do |format|
      format.html
      format.pdf do
        pdf = PdfAnfrage.new(@patent,@report.content,@report.subject,@report.from,@report.to,@report.warning)
        send_data pdf.render, 
          :type =>"application/pdf",
          :disposition=> "inline"
      end
    end
  end
  def edit
  end
  def update
  end
end
