require "rake"
desc "create_reports"
task :create_reports => :environment do
  puts "create_reports..."
  Patent.all.each do |patent|
    puts "#{patent.internaktenzeichen}:"
    years=Date.today.year-patent.anmeldedatum.year+1
    start=patent.anmeldedatum.year
    years.times do
      start=start+1
      puts start.to_i
      patent.create_reports(start)
    end
  end
  puts "done."
end
